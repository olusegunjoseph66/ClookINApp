<Window x:Class="ClockINVerraki.Page.Clockin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClockINVerraki.Page"
        mc:Ignorable="d"
        Title="Clock IN" Height="450" Width="800">
    <Grid>
        <!-- Define rows and columns -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <TextBlock Text="Enter Your ID:" FontSize="14" Margin="0,0,0,10" />
            <TextBox Name="UserIdTextBox"  Width="200" Height="30" PreviewTextInput="UserIdTextBox_PreviewTextInput" TextChanged="UserIdTextBox_TextChanged" />
            <TextBlock Name="ValidationMessage" Foreground="Red" FontSize="12" Margin="0,10,0,0" />
            <!--<TextBox Name="" Width="200" TextChanged="UserIdTextBox_TextChanged"  Height="30" />-->
            <!--<TextBlock Text="Enter Text:" Margin="0,0,0,10" FontWeight="Bold"/>-->
            <!--<TextBox Name="InputTextBox" Height="30" TextChanged="InputTextBox_TextChanged"/>-->
            <TextBlock Name="StatusTextBlock" Foreground="Green" FontWeight="Bold" Margin="0,10,0,0"/>

            <!--<TextBox Name="" Width="200" Height="30" Margin="10" />-->
            <!--<TextBox Name="" Width="200" Height="30" Margin="10" />-->
        </StackPanel>
    </Grid>
</Window>

<Window x:Class="ClockINVerraki.Page.ViewDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClockINVerraki.Page"
        mc:Ignorable="d"
        Title="View Profile" Height="450" Width="800">

    <Window.InputBindings>
        <!-- Bind CTRL+P to the PrintCommand -->
        <KeyBinding Key="P" Modifiers="Control" Command="{Binding PrintCommand}" />
    </Window.InputBindings>

    
    <Grid x:Name="MainGrid">
        <!-- Define rows and columns -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <!--<Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>-->

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <!--<TextBox Name="UserIdTextBox" Width="200"  Margin="10"/>
            <Button Content="Load User" Name="LoadUserImage" Width="150" Click="LoadUserImage_Click"  Margin="10"/>-->
            <!--<TextBox Name="" Width="200" Height="30" Margin="10" />-->            
            <!--<TextBox Name="" Width="200" Height="30" Margin="10" />-->
        </StackPanel>

        <!--<Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>-->

            <!-- Logo -->
        <Image Name="LogoImage" Grid.Row="2"  Margin="30,10,10,30" Height="40" Width="250" VerticalAlignment="Center" Stretch="Uniform" />

            <!-- User Picture -->
        <Image Name="UserPictureImage" Grid.Row="3"  Margin="30,10,10,10" Height="80" Width="350" VerticalAlignment="Center" Stretch="Uniform" />

        <TextBlock Text="" Name="IDTextBox" Grid.Row="4" Margin="80,0,0,10" Height="38" Width="200" VerticalAlignment="Center" FontSize="35" FontWeight="Bold"/>
        <TextBlock Text="" Name="FirstNameTextBox" Grid.Row="5" Margin="120,0,0,0" Height="20" Width="200"/>
        <TextBlock Text="" Name="LastNameTextBox" Grid.Row="6" Margin="120,0,0,0" Height="30" Width="200" VerticalAlignment="Center"/>
            
        </Grid>
    <!--</Grid>-->
</Window>

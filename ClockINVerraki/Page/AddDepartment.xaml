<Window x:Class="ClockINVerraki.Page.AddDepartment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClockINVerraki.Page"
        mc:Ignorable="d"
        Title="Add New Department" Height="450" Width="800">
    <Grid>
        <TextBox Name="NameTextBox" Width="200" Height="30" Margin="10"  VerticalAlignment="Top"/>
        <!--<TextBox Name="DescriptionTextBox" Width="200" Height="30" Margin="10,50,0,0"  VerticalAlignment="Top"/>-->
        <!--<Button Content="Add Item" Name="CreateDepartment" Width="100" Height="30" Margin="0,0,0,0" Click="CreateDepartment_Click"/>-->
        <ListBox Name="ItemsListBox" IsEnabled="True" Margin="10,100,10,10" DisplayMemberPath="Name"/>
        <Button Content="Delete Selected" Name="DeleteDepartment" Width="150" Height="30" VerticalAlignment="Bottom" Margin="10" Click="DeleteDepartment_Click"/>
        <Button x:Name="CreateDepartment" Content="Add Department" Click="CreateDepartment_Click" HorizontalAlignment="Left" Margin="540,20,0,0" VerticalAlignment="Top"/>


    </Grid>
</Window>
